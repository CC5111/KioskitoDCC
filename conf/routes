# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /productos                  controllers.ProductsController.products
POST    /create                     controllers.ProductsController.createProduct

GET     /compras                    controllers.PeriodsController.periods

GET     /conteos                    controllers.CountsController.counts
GET     /conteos/nuevo              controllers.CountsController.newCount

GET     /estadisticas               controllers.StatisticsController.stats


GET     /multi-form                 controllers.CountsController.multiForm()
POST    /add/Product                controllers.CountsController.addProducts()

# An example controller showing how to write asynchronous code

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
